@model getajob.Models.Register
@{
    ViewBag.Title = "Register";
}

<hr/>
<h2>Register</h2>
<hr/>
@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(i => i.Username, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label>Company Name</label>
        @Html.TextBoxFor(i => i.Name, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(i => i.ContactEmail, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(i => i.Password, new {@class = "form-control"})
    </div>


    <hr/>

    <button type="submit" class="btn btn-primary">Register</button>
}