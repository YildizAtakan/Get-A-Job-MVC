@model getajob.Models.Listing

@{
    ViewBag.Title = "Edit";
}

<hr/>
<h2>Edit</h2>
<hr/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.ID)


        <div class="form-group">
            <div class="col-md-10">
                @if (User.Identity.Name == "admin")
                {
                    <label>Account Created By</label>
                    @Html.EditorFor(model => model.ListingCreator, new {htmlAttributes = new {@class = "form-control"}})
                }
                else
                {
                    @Html.EditorFor(model => model.ListingCreator, new {htmlAttributes = new {@class = "form-control", type = "hidden", value = Model.ListingCreator}})
                }
                @Html.ValidationMessageFor(model => model.ListingCreator, "", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <label>Position Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ListingName, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ListingName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label>Company</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ListingCompany, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ListingCompany, "", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <label>Posting Details</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.listingText, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.listingText, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label>Contact Info</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.listingContact, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.listingContact, "", new {@class = "text-danger"})
            </div>
        </div>
        <p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-outline-primary"/>
                </div>
            </div>
        </p>
        <p>
            @Html.ActionLink("Back to List", "Index2", "Listings", null, new {@class = "btn btn-outline-secondary"})

        </p>
    </div>
}