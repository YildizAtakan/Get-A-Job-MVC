@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}
@Html.Partial("Dashboard")

<h2>
    Roles @Html.ActionLink("Create New Role", "Create", "RoleAdmin", null, new {@class = "btn btn-primary float-end"})
</h2>

<hr/>


<div class="panel panel-primary">
    <div class="panel-heading">

    </div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">Rol Yok</td>
            </tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin", new {id = role.Id}))
                        {
                            @Html.ActionLink("Update", "Edit", new {id = role.Id}, new {@class = "btn btn btn-warning btn-sm"})

                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        }
                    </td>

                </tr>
            }
        }
    </table>

</div>